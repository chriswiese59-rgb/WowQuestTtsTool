<Window x:Class="WowQuestTtsTool.ProjectSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Projekt auswaehlen"
        Height="400" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Projekt auswaehlen"
                       FontSize="20"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Waehlen Sie ein Projekt zum Laden"
                       FontSize="12"
                       Foreground="Gray"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Projekt-Liste -->
        <ListBox x:Name="ProjectListBox"
                 Grid.Row="1"
                 Margin="0,0,0,15"
                 SelectionChanged="ProjectListBox_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold" FontSize="13"/>
                        <TextBlock Text="{Binding Description}" FontSize="11" Foreground="Gray"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Option: Nur fertige Quests laden -->
        <CheckBox x:Name="LoadOnlyVoicedCheckBox"
                  Grid.Row="2"
                  Content="Nur bereits vertonte Quests laden"
                  Margin="0,0,0,15"
                  ToolTip="Laedt nur Quests, fuer die bereits Audio-Dateien existieren"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Abbrechen"
                    Click="OnCancelClick"
                    Padding="20,10"
                    Margin="0,0,10,0"
                    Background="#9E9E9E"
                    Foreground="White"/>
            <Button x:Name="LoadButton"
                    Content="Laden"
                    Click="OnLoadClick"
                    Padding="20,10"
                    Background="#4CAF50"
                    Foreground="White"
                    IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
