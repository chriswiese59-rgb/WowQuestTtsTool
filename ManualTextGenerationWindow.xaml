<Window x:Class="WowQuestTtsTool.ManualTextGenerationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manuelle Text-KI - WoW Quest TTS Tool"
        Width="900"
        Height="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Manuelle Text-KI (Premium Browser-Modus)" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="Kopiere den Prompt in ChatGPT+, Gemini Pro oder Claude Enterprise und fuege das Ergebnis hier ein."
                       Foreground="#666" Margin="0,4,0,0" TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Info-Box -->
        <Border Grid.Row="1" Background="#E8F5E9" BorderBrush="#81C784" BorderThickness="1"
                CornerRadius="4" Padding="12" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock FontWeight="SemiBold" Text="Vorteil des manuellen Modus:" Margin="0,0,0,6"/>
                <TextBlock TextWrapping="Wrap" FontSize="12">
                    Keine API-Kosten! Mit einem Premium-Account (ChatGPT+, Gemini Advanced, Claude Pro)
                    kannst du den Prompt im Browser verwenden und das Ergebnis hier einfuegen.
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Quest-Info und Prompt -->
        <GroupBox Grid.Row="2" Header="KI-Prompt (zum Kopieren)" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Quest-Info -->
                <StackPanel Grid.Row="0" Margin="0,0,0,8">
                    <TextBlock>
                        <Run Text="Quest:" FontWeight="Bold"/>
                        <Run x:Name="QuestInfoRun" Text="[Quest wird geladen...]"/>
                    </TextBlock>
                </StackPanel>

                <!-- Prompt TextBox -->
                <TextBox x:Name="PromptTextBox"
                         Grid.Row="1"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         FontFamily="Consolas"
                         FontSize="12"
                         Background="#FAFAFA"
                         Padding="8"/>

                <!-- Kopieren-Button -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,8,0,0">
                    <Button x:Name="CopyPromptButton"
                            Content="KI-Prompt kopieren"
                            Width="150"
                            Height="32"
                            Click="OnCopyPromptClick"
                            Background="#4CAF50"
                            Foreground="White"
                            FontWeight="SemiBold"
                            ToolTip="Kopiert den kompletten Prompt in die Zwischenablage"/>
                    <TextBlock x:Name="CopyStatusText"
                               Text=""
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"
                               Foreground="Green"
                               FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Trennlinie mit Pfeil -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,8">
            <TextBlock Text="--- Browser oeffnen, Prompt einfuegen, Ergebnis kopieren ---"
                       Foreground="Gray" FontStyle="Italic"/>
        </StackPanel>

        <!-- KI-Antwort einfuegen -->
        <GroupBox Grid.Row="4" Header="KI-Antwort einfuegen" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Antwort TextBox -->
                <TextBox x:Name="ResponseTextBox"
                         Grid.Row="0"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         FontFamily="Consolas"
                         FontSize="12"
                         Background="#FFFFF0"
                         Padding="8"
                         ToolTip="Fuege hier die Antwort der KI ein (Strg+V)"/>

                <!-- Info und Einfuegen-Button -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,8,0,0">
                    <Button x:Name="PasteResponseButton"
                            Content="Aus Zwischenablage einfuegen"
                            Width="200"
                            Height="32"
                            Click="OnPasteResponseClick"
                            Background="#2196F3"
                            Foreground="White"
                            ToolTip="Fuegt den Inhalt der Zwischenablage ein"/>
                    <TextBlock x:Name="CharCountText"
                               Text="0 Zeichen"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"
                               Foreground="Gray"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Buttons -->
        <Grid Grid.Row="5" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Vorschau-Info -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock x:Name="ComparisonText"
                           Text=""
                           Foreground="#666"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Uebernehmen-Button -->
            <Button x:Name="ApplyButton" Grid.Column="2"
                    Content="KI-Text uebernehmen"
                    Width="160" Height="40" Margin="0,0,10,0"
                    Click="OnApplyClick"
                    IsEnabled="False"
                    Background="#9C27B0" Foreground="White" FontWeight="SemiBold" FontSize="14">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="1" CornerRadius="4">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Schliessen-Button -->
            <Button x:Name="CloseButton" Grid.Column="3"
                    Content="Schliessen"
                    Width="100" Height="40"
                    Click="OnCloseClick"
                    IsCancel="True"/>
        </Grid>
    </Grid>
</Window>
