<Window x:Class="WowQuestTtsTool.StartupDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WoW Quest TTS Tool - Projekt auswaehlen"
        Height="480" Width="520"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="WoW Quest TTS Tool"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
            <TextBlock x:Name="HeaderSubtitle"
                       Text="Waehlen Sie ein Projekt"
                       FontSize="14"
                       Foreground="Gray"
                       HorizontalAlignment="Center"
                       Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Optionen -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center">

            <!-- Letztes Projekt fortsetzen (nur sichtbar wenn gueltig) -->
            <Button x:Name="ContinueLastProjectButton"
                    Click="OnContinueLastProjectClick"
                    Margin="0,0,0,12"
                    Padding="20,15"
                    Background="#4CAF50"
                    Foreground="White"
                    FontSize="14"
                    Cursor="Hand"
                    Visibility="Collapsed">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#9654;" FontSize="20" Margin="0,0,12,0"/>
                    <StackPanel>
                        <TextBlock Text="Weiterarbeiten" FontWeight="Bold"/>
                        <TextBlock x:Name="LastProjectInfo"
                                   Text="Letztes Projekt laden"
                                   FontSize="11"
                                   Opacity="0.8"/>
                    </StackPanel>
                </StackPanel>
            </Button>

            <!-- Anderes Projekt laden -->
            <Button x:Name="LoadOtherProjectButton"
                    Click="OnLoadOtherProjectClick"
                    Margin="0,0,0,12"
                    Padding="20,15"
                    Background="#2196F3"
                    Foreground="White"
                    FontSize="14"
                    Cursor="Hand">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#128193;" FontSize="20" Margin="0,0,12,0"/>
                    <StackPanel>
                        <TextBlock Text="Projekt laden..." FontWeight="Bold"/>
                        <TextBlock Text="Bestehendes Projekt auswaehlen"
                                   FontSize="11"
                                   Opacity="0.8"/>
                    </StackPanel>
                </StackPanel>
            </Button>

            <!-- Neues Projekt erstellen -->
            <Button x:Name="NewProjectButton"
                    Click="OnNewProjectClick"
                    Margin="0,0,0,12"
                    Padding="20,15"
                    Background="#FF9800"
                    Foreground="White"
                    FontSize="14"
                    Cursor="Hand">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#10133;" FontSize="20" Margin="0,0,12,0"/>
                    <StackPanel>
                        <TextBlock Text="Neues Projekt erstellen" FontWeight="Bold"/>
                        <TextBlock Text="Startet den Projekt-Assistenten"
                                   FontSize="11"
                                   Opacity="0.8"/>
                    </StackPanel>
                </StackPanel>
            </Button>

            <!-- Hinweistext wenn kein Projekt vorhanden -->
            <Border x:Name="NoProjectHint"
                    Background="#FFF3E0"
                    BorderBrush="#FFB74D"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="12"
                    Margin="0,12,0,0"
                    Visibility="Collapsed">
                <TextBlock Text="Kein gueltiges Projekt gefunden. Bitte erstellen Sie ein neues Projekt oder laden Sie ein bestehendes."
                           TextWrapping="Wrap"
                           Foreground="#E65100"/>
            </Border>
        </StackPanel>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button Content="Beenden"
                    Click="OnCancelClick"
                    Padding="20,10"
                    Background="#9E9E9E"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
