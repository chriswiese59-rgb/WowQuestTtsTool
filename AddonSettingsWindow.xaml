<Window x:Class="WowQuestTtsTool.AddonSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Addon-Einstellungen (Ingame-Defaults)"
        Width="500"
        Height="1001"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Addon-Einstellungen" FontSize="18" FontWeight="Bold"/>
            <TextBlock Text="Diese Einstellungen werden als Defaults in das WoW-Addon exportiert."
                       FontSize="11" Foreground="#666" TextWrapping="Wrap" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Settings ScrollViewer -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,0,10,0">

                <!-- Globale Einstellungen -->
                <GroupBox Header="Globale Einstellungen" Padding="10" Margin="0,0,0,10">
                    <StackPanel>
                        <CheckBox x:Name="EnableTtsCheckBox" Content="TTS aktiviert" IsChecked="True" Margin="0,0,0,5"/>
                        <CheckBox x:Name="OnlyMainQuestsCheckBox" Content="Nur Hauptquests" Margin="0,0,0,5"/>
                    </StackPanel>
                </GroupBox>

                <!-- Quest-Filter -->
                <GroupBox Header="Quest-Kategorien" Padding="10" Margin="0,0,0,10">
                    <StackPanel>
                        <CheckBox x:Name="IncludeSideQuestsCheckBox" Content="Nebenquests" IsChecked="True" Margin="0,0,0,5"/>
                        <CheckBox x:Name="IncludeGroupQuestsCheckBox" Content="Gruppenquests" IsChecked="True" Margin="0,0,0,5"/>
                        <CheckBox x:Name="IncludeDungeonQuestsCheckBox" Content="Dungeon-Quests" IsChecked="True" Margin="0,0,0,5"/>
                        <CheckBox x:Name="IncludeRaidQuestsCheckBox" Content="Raid-Quests" Margin="0,0,0,5"/>
                        <CheckBox x:Name="IncludeDailyQuestsCheckBox" Content="Tagesquests" Margin="0,0,0,5"/>
                        <CheckBox x:Name="IncludeWorldQuestsCheckBox" Content="Weltquests" Margin="0,0,0,0"/>
                    </StackPanel>
                </GroupBox>

                <!-- Wiedergabe-Verhalten -->
                <GroupBox Header="Wiedergabe-Verhalten" Padding="10" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Wiedergabemodus:" VerticalAlignment="Center" Margin="0,0,10,8"/>
                        <ComboBox x:Name="PlaybackModeCombo" Grid.Row="0" Grid.Column="1" Height="28" SelectedIndex="0" Margin="0,0,0,8">
                            <ComboBoxItem Content="Automatisch bei Questannahme" Tag="AutoOnAccept"/>
                            <ComboBoxItem Content="Automatisch beim Oeffnen" Tag="AutoOnQuestOpen"/>
                            <ComboBoxItem Content="Nur manuell" Tag="ManualOnly"/>
                        </ComboBox>

                        <CheckBox x:Name="PlayOnQuestProgressCheckBox" Grid.Row="1" Grid.ColumnSpan="2"
                                  Content="Bei Quest-Fortschritt abspielen" IsChecked="True" Margin="0,0,0,5"/>
                        <CheckBox x:Name="PlayOnQuestCompleteCheckBox" Grid.Row="2" Grid.ColumnSpan="2"
                                  Content="Bei Quest-Abschluss abspielen" IsChecked="True" Margin="0,0,0,5"/>
                        <CheckBox x:Name="StopOnQuestCloseCheckBox" Grid.Row="3" Grid.ColumnSpan="2"
                                  Content="Stoppen beim Schliessen des Quest-Fensters" Margin="0,0,0,5"/>
                        <CheckBox x:Name="AllowOverlapCheckBox" Grid.Row="4" Grid.ColumnSpan="2"
                                  Content="Mehrere Audios gleichzeitig erlauben"/>
                    </Grid>
                </GroupBox>

                <!-- Audio-Einstellungen -->
                <GroupBox Header="Audio-Einstellungen" Padding="10" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Standard-Stimme:" VerticalAlignment="Center" Margin="0,0,10,8"/>
                        <ComboBox x:Name="DefaultVoiceCombo" Grid.Row="0" Grid.Column="1" Height="28" SelectedIndex="0" Margin="0,0,0,8">
                            <ComboBoxItem Content="Maennlich" Tag="Male"/>
                            <ComboBoxItem Content="Weiblich" Tag="Female"/>
                            <ComboBoxItem Content="Automatisch (Spielergeschlecht)" Tag="Auto"/>
                        </ComboBox>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Sound-Kanal:" VerticalAlignment="Center" Margin="0,0,10,8"/>
                        <ComboBox x:Name="SoundChannelCombo" Grid.Row="1" Grid.Column="1" Height="28" SelectedIndex="0" Margin="0,0,0,8">
                            <ComboBoxItem Content="Dialog (empfohlen)" Tag="Dialog"/>
                            <ComboBoxItem Content="Master" Tag="Master"/>
                            <ComboBoxItem Content="Soundeffekte" Tag="SFX"/>
                            <ComboBoxItem Content="Musik" Tag="Music"/>
                            <ComboBoxItem Content="Umgebung" Tag="Ambience"/>
                        </ComboBox>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Lautstaerke:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                            <Slider x:Name="VolumeSlider" Width="200" Minimum="0" Maximum="1" Value="1" TickFrequency="0.1"/>
                            <TextBlock x:Name="VolumeText" Text="100%" Width="40" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- UI-Einstellungen -->
                <GroupBox Header="UI-Einstellungen" Padding="10" Margin="0,0,0,10">
                    <StackPanel>
                        <CheckBox x:Name="ShowNotificationsCheckBox" Content="Chat-Benachrichtigungen anzeigen" IsChecked="True" Margin="0,0,0,5"/>
                        <CheckBox x:Name="ShowPlayButtonCheckBox" Content="Play-Button im Quest-Fenster" IsChecked="True" Margin="0,0,0,5"/>
                        <CheckBox x:Name="ShowStopButtonCheckBox" Content="Stop-Button im Quest-Fenster" IsChecked="True"/>
                    </StackPanel>
                </GroupBox>

                <!-- Addon-Metadaten -->
                <GroupBox Header="Addon-Metadaten" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Autor:" VerticalAlignment="Center" Margin="0,0,10,8"/>
                        <TextBox x:Name="AddonAuthorBox" Grid.Row="0" Grid.Column="1" Height="28" Padding="8,5" Text="WowQuestTtsTool" Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Interface-Version:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox x:Name="InterfaceVersionBox" Grid.Row="1" Grid.Column="1" Height="28" Padding="8,5" Text="110002"/>
                    </Grid>
                </GroupBox>

            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Zuruecksetzen" Width="100" Height="32" Click="OnResetClick" Margin="0,0,10,0"/>
            <Button Content="OK" Width="80" Height="32" Click="OnOkClick" IsDefault="True"
                    Background="#4CAF50" Foreground="White" FontWeight="SemiBold"/>
            <Button Content="Abbrechen" Width="80" Height="32" Margin="10,0,0,0" Click="OnCancelClick" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
