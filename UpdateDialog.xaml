<Window x:Class="WowQuestTtsTool.UpdateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update verfuegbar"
        Width="500"
        Height="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Eine neue Version ist verfuegbar!"
                       FontSize="18" FontWeight="Bold" Foreground="#2196F3"/>
            <TextBlock x:Name="ReleaseDateText" Foreground="Gray" FontSize="11" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Versions-Info -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Aktuelle Version -->
            <Border Grid.Column="0" Background="#F5F5F5" CornerRadius="4" Padding="15,10">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Installiert" Foreground="Gray" FontSize="11" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="CurrentVersionText" Text="1.0.0" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Pfeil -->
            <TextBlock Grid.Column="1" Text="â†’" FontSize="24" VerticalAlignment="Center" Margin="15,0" Foreground="#4CAF50"/>

            <!-- Neue Version -->
            <Border Grid.Column="2" Background="#E8F5E9" BorderBrush="#4CAF50" BorderThickness="2" CornerRadius="4" Padding="15,10">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Neu" Foreground="#388E3C" FontSize="11" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="NewVersionText" Text="1.1.0" FontSize="20" FontWeight="Bold" Foreground="#2E7D32" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Changelog -->
        <GroupBox Grid.Row="2" Header="Was ist neu?" Margin="0,0,0,15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="ChangelogText"
                           TextWrapping="Wrap"
                           Padding="10"
                           FontFamily="Segoe UI"
                           LineHeight="20"/>
            </ScrollViewer>
        </GroupBox>

        <!-- Download-Fortschritt (initial versteckt) -->
        <StackPanel x:Name="DownloadPanel" Grid.Row="3" Margin="0,0,0,15" Visibility="Collapsed">
            <TextBlock x:Name="DownloadStatusText" Text="Lade Update herunter..." Margin="0,0,0,5"/>
            <ProgressBar x:Name="DownloadProgressBar" Height="20" Minimum="0" Maximum="100"/>
            <TextBlock x:Name="DownloadPercentText" Text="0%" HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Buttons -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <CheckBox x:Name="SkipVersionCheckBox"
                      Grid.Column="0"
                      Content="Diese Version ueberspringen"
                      VerticalAlignment="Center"
                      Margin="0,0,10,0"/>

            <Button x:Name="LaterButton"
                    Grid.Column="2"
                    Content="Spaeter"
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"
                    Click="LaterButton_Click"/>

            <Button x:Name="UpdateButton"
                    Grid.Column="3"
                    Content="Jetzt aktualisieren"
                    Width="140"
                    Height="35"
                    Background="#4CAF50"
                    Foreground="White"
                    FontWeight="SemiBold"
                    Click="UpdateButton_Click"/>
        </Grid>
    </Grid>
</Window>
