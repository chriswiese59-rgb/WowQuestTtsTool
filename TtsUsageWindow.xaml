<Window x:Class="WowQuestTtsTool.TtsUsageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TTS Nutzungsstatistiken"
        Width="600"
        Height="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="TTS Engine Nutzungsstatistiken"
                       FontSize="20"
                       FontWeight="Bold"/>
            <TextBlock x:Name="SessionInfoText"
                       Text="Session gestartet: -"
                       Foreground="Gray"
                       FontSize="12"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Usage DataGrid -->
        <DataGrid Grid.Row="1"
                  x:Name="UsageDataGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  BorderBrush="#CCCCCC"
                  BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Engine" Binding="{Binding EngineName}" Width="120"/>
                <DataGridTextColumn Header="Zeichen" Binding="{Binding TotalCharacters, StringFormat=N0}" Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Tokens (ca.)" Binding="{Binding TotalTokens, StringFormat=N0}" Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Requests" Binding="{Binding TotalRequests, StringFormat=N0}" Width="80">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Kosten (ca.)" Binding="{Binding EstimatedCost}" Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Gesamtsumme -->
        <Border Grid.Row="2" Background="#E3F2FD" BorderBrush="#90CAF9" BorderThickness="1"
                CornerRadius="4" Padding="12" Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Gesamt diese Session:" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock x:Name="TotalCharsText" Text="0 Zeichen"/>
                        <TextBlock Text=" | " Foreground="Gray"/>
                        <TextBlock x:Name="TotalTokensText" Text="~0 Tokens"/>
                        <TextBlock Text=" | " Foreground="Gray"/>
                        <TextBlock x:Name="TotalRequestsText" Text="0 Requests"/>
                    </StackPanel>
                </StackPanel>
                <TextBlock Grid.Column="1"
                           x:Name="TotalCostText"
                           Text="~0.00 EUR"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#1976D2"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Session zuruecksetzen"
                    Width="140"
                    Height="30"
                    Margin="0,0,8,0"
                    Click="OnResetSessionClick"
                    Background="#FF9800"
                    Foreground="White"/>
            <Button Content="Als CSV exportieren"
                    Width="140"
                    Height="30"
                    Margin="0,0,8,0"
                    Click="OnExportCsvClick"/>
            <Button Content="Schliessen"
                    Width="100"
                    Height="30"
                    Click="OnCloseClick"
                    IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
